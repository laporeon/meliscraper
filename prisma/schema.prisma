generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Scraping {
  id        String   @id @default(uuid())
  date      DateTime @default(now()) @db.Date
  createdAt DateTime @default(now()) @db.Timestamptz(3)

  categories Category[]

  @@map("scrapings")
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  slug      String
  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)

  products  Product[]
  scrapings Scraping[]

  @@map("categories")
}

model Product {
  id         String   @id @default(uuid())
  position   Int
  name       String
  image      String
  price      Int
  link       String
  categoryId String
  createdAt  DateTime @default(now()) @db.Timestamptz(3)
  updatedAt  DateTime @updatedAt @db.Timestamptz(3)

  Category Category? @relation(fields: [categoryId], references: [id])

  @@map("products")
}
